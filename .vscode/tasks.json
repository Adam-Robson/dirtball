{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "linting the source",
      "type": "shell",
      "command": "eslint",
      "args": ["--ext", ".ts", ".", "--fix"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$eslint-compact"],
      "presentation": {
        "reveal": "always",
        "echo": true,
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "building from source",
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": [],
      "detail": "tsc"
    },
    {
      "label": "watching in context: tsconfig.json",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "testing source: vitest",
      "type": "shell",
      "command": "vitest",
      "args": ["--run"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": {
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^\\s*\\d+\\)\\s+(.*)\\s+\\((.*):(\\d+):(\\d+)\\)$",
          "file": 2,
          "line": 3,
          "column": 4,
          "message": 1
        }
      },
      "presentation": {
        "reveal": "always",
        "echo": true,
        "focus": false,
        "panel": "shared"
      }
    },

    {
      "label": "testing source: jest",
      "type": "shell",
      "command": "jest",
      "args": ["--run"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": {
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^\\s*\\d+\\)\\s+(.*)\\s+\\((.*):(\\d+):(\\d+)\\)$",
          "file": 2,
          "line": 3,
          "column": 4,
          "message": 1
        }
      },
      "presentation": {
        "reveal": "always",
        "echo": true,
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
